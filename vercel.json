{
  "builds": [
    {
      "src": "bot/web_app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "webapp/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webapp/(.*)",
      "dest": "/webapp/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/bot/web_app.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11",
    "DATABASE_URL": "sqlite:///universal_exchange.db"
  },
  "functions": {
    "bot/web_app.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
