{
  "version": 2,
  "builds": [
    {
      "src": "src/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/web_app",
      "dest": "/static/web_app.html"
    },
    {
      "src": "/webhook",
      "dest": "/src/main.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/src/main.py"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.9",
    "BOT_TOKEN": "@bot-token",
    "ADMIN_ID": "@admin-id",
    "CRYPTO_BOT_API_KEY": "@crypto-bot-api-key"
  }
}
